{% layout "layout.liquid" %}
{% block content %}

    

<body class = "editBody">
    

<div class = "edit">
<h3>Edit this wish</h3>
 <form action="/wishlists/{{wishlist._id}}?_method=PUT" method="post">
  <fieldset>

        <label>
            Name: <input type="text" name="name" placeholder="Whats the name of the item you're wishing for, huh?" value="{{purchased.complete}}">
            <label>
                cost: <input type="text" name="cost" placeholder="How much is this thing"/>
            </label>
        </label>
        Did I get it? <input type="checkbox" name ="purchased"
                {% if wishlist.purchased == true%}
                     checked
                {%endif%}>
       
        <label>
            <input type="submit" value="Create the new wish item"/>
        </label>
        
        <a class ="button" href="/wishlists"><button>Go back to your lists</button></a>

    </fieldset>
  
 </form> 
</div>
</body>
{% endblock %}


