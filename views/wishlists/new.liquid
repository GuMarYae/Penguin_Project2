{% layout "layout.liquid" %}
{% block content %}

<div>
<h3>Create a new list</h3>
 <form action="/wishlists" method="post">
  <fieldset>

        <label>
            Name: <input type="text" name="name" placeholder="Whats the name of your wish, huh?"/>
        </label>
        <label>
            cost: <input type="text" name="cost" placeholder="How much is this thing"/>
        </label>
        <label>
            purchased: <input type="checkbox" name="got it"/>
        </label>
        <label>
            purchased: <input type="submit" value="complete"/>
        </label>
    </fieldset>
  
 </form> 
</div>
{% endblock %}

